<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Daily</title>
		<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
  <body>
    <h1></h1>
    <form class="form-inline">
      <input type="date" class="form-control" name="date" value="<%= (edit.date || new Date()).toISOString().substr(0,10) %>" required/>
      <input type="text" class="form-control" name="content" value="<%= edit.content %>" placeholder="content" required/>
<% if (edit.id) { %>
      <div class="btn-group" role="group">
        <button type="submit" class="btn btn-success" formaction="/tsuka/daily/<%= edit.id %>/update" formmethod="post">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        </button>
        <button type="submit" class="btn btn-danger" formaction="/tsuka/daily/<%= edit.id %>/delete" formmethod="post">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </button>
      </div>
<% } else { %>
      <button type="submit" class="btn btn-success" formaction="/tsuka/daily/create" formmethod="post">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
<% } %>
    </form>
    <p/>
    <form>
    <div>
      <table class="table table-striped table-hover">
<%  dailies.forEach(function(d) { %>
          <tr>
            <td>
              <button type="submit" class="btn btn-defult" aria-label="Left Align"
               formaction="/tsuka/daily/<%= d.id %>" formmethod="get"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></button></button>
            </td>
            <td><%= d.date.toISOString().substr(0,10) %></td>
            <td><%= d.content %></td>
          </td>
<% }) %>
      </table>
    </div>
    </form>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	</body>
</html>
